<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context="com.waperr.aalaundry.main.handle_fragment.handle_home_location.LondriTypeActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewJudulJenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:elevation="3dp"
                android:text="Jenis AA Londri"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewJenis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:padding="@dimen/_10sdp"
                android:clickable="true"
                android:background="@drawable/bg_button_select">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:id="@+id/radioGroupJenis">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonJenis1"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonJenis2"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonJenis3"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonJenis4"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:elevation="3dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Layanan AA Londri"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:clickable="true"
                android:background="@drawable/bg_button_select">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imageviewInfo1"
                            android:src="@drawable/ic_info"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>
                        <ImageView
                            android:id="@+id/imageviewInfo2"
                            android:src="@drawable/ic_info"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>
                        <ImageView
                            android:id="@+id/imageviewInfo3"
                            android:src="@drawable/ic_info"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>
                    </LinearLayout>
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:id="@+id/radioGroupLayanan">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonLayanan1"
                            android:text="AA Londri Reguler"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonLayanan2"
                            android:text="AA Londri Express"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>

                        <android.support.v7.widget.AppCompatRadioButton
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/radioButtonLayanan3"
                            android:text="AA Londri Kilat"
                            android:textColorHighlight="@color/colorAccent"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_12sdp"
                            android:checked="false"/>
                    </RadioGroup>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonLondriTypeNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:text="Selanjutnya"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:background="@color/colorPrimary" />

</LinearLayout>
