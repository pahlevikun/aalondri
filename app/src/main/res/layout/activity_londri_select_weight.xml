<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context="com.waperr.aalaundry.main.handle_fragment.handle_home_location.handle_londri_by_weight.LondriSelectWeightActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:elevation="3dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Jumlah Londri (Kg)"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:clickable="true"
                android:background="@drawable/bg_button_select">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@color/colorWhite">
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/buttonKurangBerat"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="-"
                            android:textColor="@color/colorWhite"
                            android:textAllCaps="true"
                            android:background="@drawable/bg_button_login"
                            style="@style/Widget.AppCompat.Button.Borderless"/>
                        <TextView
                            android:id="@+id/textViewBerat"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:text="0 Kg"/>
                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/buttonTambahBerat"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:text="+"
                            android:textColor="@color/colorWhite"
                            android:textAllCaps="true"
                            android:background="@drawable/bg_button_login"
                            style="@style/Widget.AppCompat.Button.Borderless"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textViewHarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_14sdp"
                        android:text="IDR 10000"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:elevation="3dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Catatan Tambahan"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:clickable="true"
                android:background="@drawable/bg_button_select">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:background="@color/colorWhite">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false">
                        <EditText
                            android:id="@+id/editTextCatatanWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:minLines="3"
                            android:maxLength="255"
                            android:gravity="top|left"
                            android:inputType="textMultiLine"
                            android:scrollHorizontally="false"
                            android:padding="@dimen/_20sdp"
                            android:textSize="@dimen/_13sdp"
                            android:background="@drawable/bg_edittext2"
                            android:textColorHint="@color/colorText2"
                            android:textColor="@color/colorText"
                            android:textColorHighlight="@color/colorText2"
                            android:hint="Catatan Tambahan (Contoh: pakaian perlu perhatian khusus)" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_10sdp"
                android:text="@string/londriKiloanText"
                />
            </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonLondriSelectWeightNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:text="Selanjutnya"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:background="@color/colorPrimary" />
</LinearLayout>
