<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_weight="1"
        android:background="@drawable/bg_button_select">
        <LinearLayout
            android:id="@+id/linLayOrderbyItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/imageViewAdapterGambar"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_margin="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_order_request"
                app:siBorderWidth="@dimen/_4sdp"
                app:siBorderColor="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Order"
                            android:textColor="@color/colorText2"
                            android:textSize="@dimen/_9sdp"/>
                        <TextView
                            android:id="@+id/textViewAdapterInvoice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ini invoice"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_11sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Penjemputan"
                            android:textColor="@color/colorText2"
                            android:textSize="@dimen/_9sdp"/>
                        <TextView
                            android:id="@+id/textViewAdapterTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="17-07-2016"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_11sdp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tipe Londri"
                            android:textColor="@color/colorText2"
                            android:textSize="@dimen/_9sdp"/>
                        <TextView
                            android:id="@+id/textViewAdapterTipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Londris"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_11sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Layanan Londri"
                            android:textColor="@color/colorText2"
                            android:textSize="@dimen/_9sdp"/>
                        <TextView
                            android:id="@+id/textViewAdapterLayanan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kecepatan Kilat"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/_11sdp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textViewAdapterStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textStyle="bold"
                    android:text="Pakaian Sedang Diproses"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>