<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.waperr.aalaundry.main.handle_fragment.handle_home_location.LondriScheduleActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:elevation="3dp"
                android:text="Pilih Tanggal dan Waktu"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:clickable="true"
                    android:background="@drawable/bg_button_select">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorText"
                            android:text="Pilih Tanggal"/>
                        <EditText
                            android:id="@+id/editTextCreateConferenceDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            android:hint="Pilih Tanggal"
                            android:focusable="false"
                            android:textColor="@color/colorText2"
                            android:backgroundTint="@color/colorPrimary"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorText"
                            android:text="Pilih Waktu"/>
                        <Spinner
                            android:id="@+id/spinnerDurasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:padding="@dimen/_15sdp"
                            android:background="@color/colorBack"/>
                        </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonLondriScheduleNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:text="Selanjutnya"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:background="@color/colorPrimary" />
</LinearLayout>
