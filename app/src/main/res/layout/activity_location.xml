<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context="com.waperr.aalaundry.main.handle_fragment.handle_home_location.LocationActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:elevation="3dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Pilih Outlet AA Londri"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <com.waperr.aalaundry.customlibs.NonScrollListView
                android:id="@+id/listViewMitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"></com.waperr.aalaundry.customlibs.NonScrollListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorBackDark"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonAddMitra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cari Outlet"
                android:textColor="@color/colorText"
                android:textAllCaps="true"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:elevation="3dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="Pilih Alamat Tujuanmu"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>
            <com.waperr.aalaundry.customlibs.NonScrollListView
                android:id="@+id/listViewAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"></com.waperr.aalaundry.customlibs.NonScrollListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorBackDark"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonAddAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah Alamat"
                android:textColor="@color/colorText"
                android:textAllCaps="true"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewLocationMitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:text="Belum memilih Mitra"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/textViewLocationAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:text="Belum memilih Alamat"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/_5sdp"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonLocationNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:text="Selanjutnya"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:background="@color/colorPrimary" />
</LinearLayout>
